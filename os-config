case "$OSTYPE" in
    msys|cygwin)
        # Windows (typically when using Git Bash or Cygwin)
        export CURRENT_OS="WINDOWS"
        ;;

    linux-gnu*)
        # Unix-like system
        if [ -f /etc/os-release ]; then
            . /etc/os-release  # Source the os-release file
            case $ID in
                ubuntu)
                    export CURRENT_OS="UBUNTU"
                    ;;

                *)
                    # Other Linux distributions
                    export CURRENT_OS="LINUX_OTHER"
                    ;;
            esac
        fi
        ;;

    linux-android)
        # Android, likely using Termux
        export CURRENT_OS="TERMUX"
        ;;

    darwin*)
        # MacOS
        export CURRENT_OS="MACOS"
        ;;

    *)
        # Other OS types
        export CURRENT_OS="UNKNOWN"
        ;;
esac
